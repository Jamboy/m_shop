/* components/tab-bar/index.wxss */
.container {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    width: 100%;
    background-color: #ffffff;
}

.jambo {
    font-family: sleeve !important;
    color: #157658 !important;
}

.icons {
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    width: 230rpx;
    height: 100%;
    color: #999999;

}

.icons > view {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/*控制购物车text上边距*/
.icons > view:nth-child(2) > text {
    margin-top: 12rpx;
}

.icons text {
    font-size: 20rpx;
}

.buy {
    background-color: #157658;
    width: 260rpx;
    height: 100%;
}

.cart {
    background-color: #333333;
    width: 260rpx;
    height: 100%;
}

.btn-font {
    color: #ffffff;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}