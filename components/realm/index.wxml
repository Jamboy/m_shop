<!--components/realm/index.wxml-->
<view class="container">
    <view class="sku-preview">
        <image class="sku-img" src="/images/tabbar/cart.png"></image>
        <view class="sku-description">
            <text>测试 title</text>
            <view>
                <view class="price-row">
                    <l-price size="40" value="11"></l-price>
                    <text class="stock">库存：999 件</text>
                </view>
                <text class="choose">请选择:</text>
                <text class="color">颜色</text>
            </view>
        </view>
    </view>

    <view class="hr"></view>

    <block wx:for="{{fences}}" wx:key="index">
        <!--    规格-->
        <udf-fence bind:celltap="onCellTap" x="{{index}}" data-key-id="{{item.id}}" fence="{{item}}"></udf-fence>
    </block>

    <view class="counter-container">
        <!--  数量选择       -->
        <text>购买数量</text>
        <l-counter count="1" min="1" max="10"></l-counter>
    </view>

    <view class="bottom-container">
        <text class="left-btn">加入购物车</text>
        <text class="right-btn">立即购买</text>
    </view>
</view>