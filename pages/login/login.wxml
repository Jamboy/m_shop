<view>
    <form bindsubmit="startLogin">
        <view class="input-group">
            <text class="input-label">账号</text>
            <input name="username" placeholder="请输入账号" />
        </view>
        <view class="input-group">
            <text class="input-label">密码</text>
            <input name="password" placeholder="请输入密码" password />
        </view>
        <view>
            <button form-type="submit">登录</button>
        </view>
    </form>
    <view class="btn-login">
        <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">使用微信登录</button>
    </view>
</view>